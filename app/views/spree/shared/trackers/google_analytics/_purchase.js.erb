<% if order_just_completed?(@order) %>
  <script>
    if (typeof gtag !== 'undefined') {
      gtag('event', 'purchase', {
        "transaction_id": '<%= @order.number %>',
        "value": '<%= @order.total %>',
        "currency": '<%= @order.currency %>',
        "tax": '<%= @order.tax_total %>',
        "shipping": '<%= @order.shipment_total %>',
        "items": [
          <% @order.line_items.each do |line_item| %>
            <%= ga_line_item(line_item.variant) %>
          <% end %>
        ]
      });
    }
  </script>
<% end %>
